#user and default editor
DEFAULT_USER="jake"
export EDITOR="/usr/bin/vim"
#export VISUAL="/usr/bin/gvim"

#vi mode with backspace
set -o vi
bindkey "^?" backward-delete-char #allow backspace to delete behind cursor

#oh-my-zsh
ZSH=$HOME/.oh-my-zsh
ZSH_THEME="clean"
# (random) clean miloshadzic takashiyoshida sporty_256 sorin robbyrussell nicoulaj
source $ZSH/oh-my-zsh.sh

export TERM=xterm-256color #fix so tmux colors, and vim colors all play nice
# tmux on start with zsh
if [ "$TMUX" = "" ]; then tmux; fi

#Aliases
alias gob="go build"
alias git="hub"
alias sudo="nocorrect sudo"
alias irssi="TERM=screen-256color irssi" #fix for the xterm fix above with xfce4term and irssi buffer
alias weechat-curses="TERM=screen-256color weechat-curses" #attempting same irssi fix with weechat

#oh-my-zsh plugins
plugins=(git github vundle rbenv ruby rails rails3 encode64 tmux golang archlinux systemd pass)

# Miscellaneous functions
source $HOME/.zsh_aliases

#Set tmux title based on hostname
printf "\033k`hostname -s`\033\\"

# GO
export GOPATH="$HOME/Code/Go"
export PATH="$HOME/.rbenv/bin:$PATH:/opt/andoid-sdk-tools"
export PATH="$GOPATH/bin:$PATH"
#export PATH="$PATH:$HOME/.bspwm"

# RBENV
eval "$(rbenv init -)"
