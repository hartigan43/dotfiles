#user and default editor
DEFAULT_USER="jake"
export EDITOR="/usr/bin/vim"
#export VISUAL="/usr/bin/gvim"

#vi mode with backspace
set -o vi
bindkey "^?" backward-delete-char #allow backspace to delete behind cursor

#tmux
export TERM=xterm-256color #fix so tmux colors, and vim colors all play nice
# tmux on start with zsh
if [ "$TMUX" = "" ]; then tmux; fi

#Miscellaneous functions
source $HOME/.zsh_aliases

#Set tmux title based on hostname
printf "\033k`hostname -s`\033\\"

#Go
export GOPATH="$HOME/Code/Go"
export PATH="$HOME/.rbenv/bin:$PATH:/opt/andoid-sdk-tools"
export PATH="$GOPATH/bin:$PATH"
#export PATH="$PATH:$HOME/.bspwm"

#rbenv
eval "$(rbenv init -)"

#Antigen
source ~/.antigen.zsh
#load oh-my-zsh library
antigen use oh-my-zsh  #antigen bundle robbyrussell/oh-my-zsh lib/
#Antigen Bundles
#antigen bundle robbyrussell/oh-my-zsh plugins/ruby
antigen bundle command-not-found
antigen bundle git
antigen bundle pass
antigen bundle rails
antigen bundle ruby
antigen bundle rbenv
antigen bundle rupa/z
antigen bundle systemd
antigen bundle tmux
antigen bundle vundle
antigen bundle zsh-users/zsh-syntax-highlighting
#Antigen Theme
antigen-theme robbyrussell/oh-my-zsh themes/clean
## (random) clean miloshadzic takashiyoshida sporty_256 sorin robbyrussell nicoulaj
antigen apply
